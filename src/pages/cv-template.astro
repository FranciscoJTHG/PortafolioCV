---
import PerfilTemp from "@/components/cv/PerfilTemp.astro";
import SkillsTemplate from "@/components/SkillsTemplate.astro";
import ExperienciaLabTemp from "@/components/cv/ExperienciaLabTemp.astro";
import InformacionEstudios from "@/components/cv/InformacionEstudios.astro";
import '../styles/global.css'
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Francisco Thielen - Desarrollador de Software</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Roboto", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <PerfilTemp />
          <SkillsTemplate />
        </div>
        <div>
          <ExperienciaLabTemp />
          <InformacionEstudios pageBreak={true} customClass="bg-white p-3 rounded-lg shadow-md mt-8"/>
        </div>
      </div>
    </div>
  </body>
</html>
