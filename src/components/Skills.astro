<div class="rounded-lg pt-4">
    <h2 class="text-3xl w-full font-bold mb-6">Habilidades: </h2>

    <!-- Grid responsivo mejorado: 1 columna en móvil, 2 en sm, 3 en lg, 4 en xl -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3 mt-2">
        <!-- Sección: Lenguajes de Programación -->
        <div class="rounded-lg p-2">
            <h3 class="text-xl font-semibold mb-3">Lenguajes de Programación:</h3>
            <div class="space-y-2">
                <div class="flex items-center">
                    <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                    <p>Java</p>
                </div>
                <div class="flex items-center">
                    <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                    <p>JavaScript - TypeScript</p>
                </div>
                <!-- <div class="flex items-center">
                    <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                    <p>PL/pgSQL</p>
                </div> -->
            </div>
        </div>

        <!-- Sección: Backend -->
        <div class="rounded-lg p-2">
            <h3 class="text-xl font-semibold mb-3">Backend:</h3>
            <div class="space-y-2">
                <div class="flex items-center">
                    <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                    <p>Nodejs/Express</p>
                </div>
                <div class="flex items-center">
                    <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                        <p>Nestjs</p>
                        <!-- <div>
                            <Icon name="skill-icons:nestjs-light" size={24} />
                            <Icon name="skill-icons:nestjs-dark" size={24} />
                        </div> -->
                    </div>
                <div class="flex items-center">
                    <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                    <p>Spring</p>
                </div>
            </div>
        </div>

        <!-- Sección: Base de Datos -->
        <div class="rounded-lg p-2">
            <h3 class="text-xl font-semibold mb-3">Base de Datos:</h3>
            <div class="space-y-2">
                <div class="flex items-center">
                    <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                    <p>PostgreSQL - PL/pgSQL </p>
                </div>
                <div class="flex items-center">
                    <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                    <p>MySQL - SQL/PSM</p>
                </div>
                <div class="flex items-center">
                    <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                    <p>SqlServer - T-SQL</p>
                </div>
                <div class="flex items-center">
                    <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                    <p>MongoDB</p>
                </div>
            </div>
        </div>

        <!-- Sección: Frontend -->
        <div class="rounded-lg p-2">
          <h3 class="text-xl font-semibold mb-3">Frontend:</h3>
          <div class="space-y-2">
              <div class="flex items-center">
                  <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                  <p>HTML</p>
              </div>
              <div class="flex items-center">
                  <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                  <p>CSS</p>
              </div>
              <div class="flex items-center">
                  <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                  <p>Bootstrap</p>
              </div>
              <div class="flex items-center">
                  <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                  <p>Tailwind CSS</p>
              </div>
              <div class="flex items-center">
                  <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                  <p>React</p>
              </div>
          </div>
        </div>

        <!-- Sección: Cloud & DevOps -->
        <div class="rounded-lg p-2">
            <h3 class="text-xl font-semibold mb-3">Cloud & DevOps:</h3>
            <div class="space-y-2">
              <div class="flex items-center">
                  <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                  <p>Linux</p>
              </div>
              <div class="flex items-center">
                  <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                  <p>GCP</p>
              </div>
              <div class="flex items-center">
                <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                <p>Docker</p>
              </div>
              <div class="flex items-center">
                <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                <p>Vagrant</p>
              </div>
              <div class="flex items-center">
                <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                <p>Ansible</p>
              </div>
              <div class="flex items-center">
                  <div class="w-6 h-6 badge badge-secondary rounded-full mr-2"></div>
                  <p>Git</p>
              </div>
            </div>
        </div>

    </div>
</div>
